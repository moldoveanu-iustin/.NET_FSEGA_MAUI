<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Moldoveanu_Iustin_Lab7.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="50,0"
            Spacing="25">
            <Image
                Source="shopping_list.png"
                HeightRequest="125"
                Aspect="AspectFit"
                SemanticProperties.Description="Shopping List image" />

            <Label
                Text="This is your shopping list app"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="This is your shopping list app" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
