<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Moldoveanu_Iustin_Lab7.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image 
                Source="wishlist.jpg" 
                SemanticProperties.Description="My Shopping List" 
                HeightRequest="64" />

            <Label
                Text="Welcome to &#10; your Shopping list app"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to your Shopping list app" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
